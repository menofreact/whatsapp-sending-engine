# WAHAsender Environment Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-key-change-in-production

# Database (optional, defaults to ./db/queue.db)
# DB_PATH=/app/db/queue.db

# WhatsApp Configuration
# Chrome/Chromium path for Puppeteer (auto-detected if not set)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Skip bundled Chromium download (use system Chromium)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
